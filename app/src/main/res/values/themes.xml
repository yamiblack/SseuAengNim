<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SseuAengNim" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/buttonColor</item>
        <item name="colorPrimaryVariant">@color/subColor</item>
        <item name="colorOnPrimary">@color/bottomNavColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accentColor</item>
        <item name="colorSecondaryVariant">@color/subColor</item>
        <item name="colorOnSecondary">@color/subColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionBarTheme">@style/ActionBarStyle</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/nanumsquareregular</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationStyle</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@drawable/menu_selector_color</item>
        <item name="itemTextColor">@drawable/menu_selector_color</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/buttonColor</item>
        <item name="android:textColor">@color/descriptionColor</item>
    </style>
</resources>